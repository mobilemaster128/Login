<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="apcStyles" format="reference" />

    <declare-styleable name="AndroidPageControl">
        <attr name="apc_indicatorSize" format="reference|dimension" />
        <attr name="apc_indicatorDistance" format="reference|dimension" />
        <attr name="apc_indicatorShape" format="enum">
            <enum name="circle" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
        <attr name="apc_currentIndicatorSize" format="reference|dimension" />
        <attr name="apc_colorCurrentDefault" format="reference|color" />
        <attr name="apc_colorCurrentPressed" format="reference|color" />
        <attr name="apc_colorNormalDefault" format="reference|color" />
        <attr name="apc_colorNormalPressed" format="reference|color" />
    </declare-styleable>

</resources>
